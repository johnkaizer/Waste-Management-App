<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.galaxiescoders.wastetracker.ui.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.galaxiescoders.wastetracker.ui.DashboardFragment"
        android:label="Manage Users"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.galaxiescoders.wastetracker.ui.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_home_users"
        android:name="com.galaxiescoders.wastetracker.ui.UsersHomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_users_home" />
    <fragment
        android:id="@+id/navigation_tools"
        android:name="com.galaxiescoders.wastetracker.ui.AdminToolsFragment"
        android:label="Manage Vehicles"
        tools:layout="@layout/fragment_admin_tools" />
    <fragment
        android:id="@+id/admin_zones"
        android:name="com.galaxiescoders.wastetracker.ui.ZonesAdminFragment"
        android:label="Manage Zones"
        tools:layout="@layout/fragment_zones_admin" />
    <fragment
        android:id="@+id/staff_home"
        android:name="com.galaxiescoders.wastetracker.ui.StaffHomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_staff_home" />
    <fragment
        android:id="@+id/tools_staff"
        android:name="com.galaxiescoders.wastetracker.ui.StaffToolsFragment"
        android:label="My Tools"
        tools:layout="@layout/fragment_staff_tools" />
    <fragment
        android:id="@+id/zones_staff"
        android:name="com.galaxiescoders.wastetracker.ui.StaffZoneFragment"
        android:label="My Zones"
        tools:layout="@layout/fragment_staff_zone" />
</navigation>