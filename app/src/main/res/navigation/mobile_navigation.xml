<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.galaxiescoders.wastetracker.ui.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.galaxiescoders.wastetracker.ui.DashboardFragment"
        android:label="Manage Users"
        tools:layout="@layout/fragment_dashboard" />
    <fragment
        android:id="@+id/navigation_tools"
        android:name="com.galaxiescoders.wastetracker.ui.AdminToolsFragment"
        android:label="Manage Vehicles"
        tools:layout="@layout/fragment_admin_tools" />
    <fragment
        android:id="@+id/admin_zones"
        android:name="com.galaxiescoders.wastetracker.ui.ZonesAdminFragment"
        android:label="Manage Zones"
        tools:layout="@layout/fragment_zones_admin" />
    <fragment
        android:id="@+id/admin_applications"
        android:name="com.galaxiescoders.wastetracker.AdminApplicationsFragment"
        android:label="Manage Application"
        tools:layout="@layout/fragment_admin_applications" />
    <fragment
        android:id="@+id/admin_complaints"
        android:name="com.galaxiescoders.wastetracker.ui.AdminComplaintsFragment"
        android:label="Manage Complaints"
        tools:layout="@layout/fragment_admin_complaints" />
    <fragment
        android:id="@+id/admin_subs"
        android:name="com.galaxiescoders.wastetracker.ui.AdminSubscriptionsFragment"
        android:label="Manage Subscriptions"
        tools:layout="@layout/fragment_admin_subscriptions" />
</navigation>